.wellcome-top
  %header.wellcome-top__header
    %h1
      %a.wellcome-topIcon{:href => "/"}
        = image_tag "logo.png" 
  %main.wellcome-top__main
    %section.wellcome-top__main__content
      %h2.wellcome-text
        登録完了しました！！
      .wellcome-forms
        .wellcome-form-image
          = image_tag "wellcome.jpg"
        = link_to "Let's Go!! FURIMA!!", root_path
  %footer.wellcome-topFooter
    %nav
      %ul
        %li
          = link_to root_path do  
            = "プライバシーポリシー"  
        %li
          = link_to root_path do  
            = "メルカリ利用規約"  
        %li
          = link_to root_path do  
            = "特定商取引に関する表記"  
      %a.logo-img
        = image_tag "logo-white.png" 
      %a.logo-text
        %Small © Furima
