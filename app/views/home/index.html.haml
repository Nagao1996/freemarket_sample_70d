.top-header
  .headerInner
    .mainHeader
      .header-image
        = image_tag "logo.png"
      .searchBox
        .form
          %input#searchInput.searchBox--input{:name => "key", :placeholder => "キーワードから探す"}/
          %button{:type => "submit"}
            .searchBox__icon
              = image_tag "icon-search 1.png"
    .nav
      %ul.listLeft
        %li.listLeft__item-first
          %a{:href => "#"} カテゴリー
        %li.listLeft__item
          %a{:href => "#"} ブランド
      %ul.listRight
        - if user_signed_in?
          .listRight__item-login 
            = link_to user_path(current_user) do
              = "マイページ"
          .listRight__item-new
            = link_to "ログアウト", destroy_user_session_path, method: :delete
        - else
          .listRight__item-login 
            = link_to "新規登録", users_path
          .listRight__item-new
            = link_to "ログイン", new_user_session_path

